#include <stdio.h>

int main() 
{
    int num, digit, sum = 0;

    printf("Input any number: ");
    scanf("%d", &num);

    for (; num > 0; num /= 10) 
    {
        digit = num % 10;  // Get the last digit of the number
        sum += digit;      // Add the digit to the running sum
    }

    printf("Sum of digits: %d\n", sum);

    return 0;
}
